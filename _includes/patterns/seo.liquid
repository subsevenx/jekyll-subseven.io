{% assign og = page.seo.og %}
{% assign tw = page.seo.tw %}
{% assign mt = page.seo.meta %}
{% assign ix = page.seo.index %}

<meta charset="utf-8"> 
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="theme-color" content="#000">

{%- comment -%} Indexing {%- endcomment -%}
<meta name="revisit-after" content="{%- if ix.revisit -%}{{ix.revisit}}{%- else -%}{{site.revisit}}{%- endif -%}">
<meta name="robots" content="{%- if ix.robots -%}{{ix.robots}}{%- else -%}{{site.robots}}{%- endif -%} ">

{%- comment -%} Meta SEO {%- endcomment -%}
<meta name="title" content="{%- if mt.title -%}{{mt.title}} | {{site.title}}{% else %}{{page.title}} | {{site.title}}{%- endif -%}">    
<meta name="description" content="{%- if mt.description -%}{{mt.description}}{% else %}{{site.description}} {% endif %}">
<meta name="keywords" content="{%- if mt.keywords -%}{{mt.keywords}}{% elsif page.tags %}{{page.tags | sort | join: ", "}}{% else %}{{site.keywords}}{% endif %}">
<meta name="author" content="{%- if mt.author -%}{{mt.author}}{%- elsif page.author -%}{{page.author}}{%- else -%}{{site.author}}{%- endif -%}">
<meta name="language" content="{%- if mt.language -%}{{mt.language}}{%- elsif page.language -%}{{page.language}}{%- else -%}{{- site.language -}}{%- endif -%}">

{%- comment -%} OG SEO {%- endcomment -%}
<meta property="og:title" content="{%- if og.title -%}{{- og.title -}} | {{site.title}}{% else %}{{page.title}} | {{site.title}}{%- endif -%}">
<meta property="og:description" content="{% if og.description %}{{og.description}}{% else %}{{site.description}}{% endif %}">
<meta property="og:url" content="{%- if page.url != / -%}{{site.url}}{{page.url}}" {% elsif page.url == / %}{{site.url}}{%- endif -%}> 
<meta property="og:image" content="{% if og.image %}{{og.image}}{% elsif page.featured %}{{page.featured}}{% else %}{{site.image}}{% endif %}">
<meta property="og:site_name" content="{%- if og.site_name -%}{{og.site_name}} {% else %}{{site.title}}{%- endif -%}">
<meta property="og:locale" content="{%- if og.locale -%}{{og.locale}}{% else %}{{site.og_locale | default: "en_US"}}{%- endif -%}">
<meta property="og:type" content="{%- if og.type == nil -%}{%- if site.post -%}article{%- else -%}website{%- endif -%}{%- else -%}{{og.type}}{% endif %}">