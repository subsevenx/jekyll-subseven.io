<article class="row"> 
  {% for post in site.posts %}
  <div class="col-sm-12 col-md-6 card my-2"> 
      {% if post.thumbnail %}
      <img src="{{post.thumbnail}}" class="img-fluid post-card" width="683" height="384" alt="Featured image for post title: {{post.title}}">
      {% else %}
      <img src="/assets/img/uploads/featured/img.png" class="img-fluid post-card" alt="Featured image for post title: {{post.title}}">
      {% endif %}
      <hr>
      <h2 class="px-3 h6 fw-bold py-2">{{post.title | upcase}}</h2>
      <header>
      </header>
      <details open class="card-body py-0 fs-6">
        <summary>Post Excerpt</summary>
        <p class="card-text">{{post.excerpt | strip_html | truncatewords: 50}}</p>
      </details>
      <footer class="card-footer text-center">
        <div class="row-flex d-flex align-items-center">
          <div class="col-6 text-muted">
            <time class="h6" datetime="{{post.date | date: "%F"}}">On: {{post.date | date: "%b %-d, %Y"}}</time>
          </div>
          <div class="col-6">
            <a href="{{site.url}}{{post.url}}" class="read-post-url card-link">Read More &#10148;</a>
          </div>
        </div>
      </footer>
  </div>
  {% endfor %}
</article>